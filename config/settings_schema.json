[
  {
    "name": "theme_info",
    "theme_name": "Machinist",
    "theme_version": "1.0.0",
    "theme_author": "Dylan Burkey",
    "theme_documentation_url": "https://github.com/dylanburkey/machinist-shopify-theme",
    "theme_support_url": "https://github.com/dylanburkey/machinist-shopify-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#0a0a0a"
      },
      {
        "type": "color",
        "id": "color_panel",
        "label": "Panel Background",
        "default": "#141414"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border/Grid Lines",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Primary Text",
        "default": "#e5e5e5"
      },
      {
        "type": "color",
        "id": "color_text_dim",
        "label": "Secondary Text",
        "default": "#888888"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#ff4d00"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "teko_n5",
        "label": "Heading Font",
        "info": "Default: Teko"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading Scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Body Font",
        "info": "Default: Inter"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body Scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1400,
        "unit": "px",
        "label": "Page Width"
      },
      {
        "type": "range",
        "id": "spacing_padding",
        "min": 1,
        "max": 3,
        "step": 0.5,
        "default": 1.5,
        "unit": "rem",
        "label": "Section Padding"
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 2,
        "unit": "px",
        "label": "Grid Line Thickness"
      },
      {
        "type": "range",
        "id": "media_padding",
        "min": 0,
        "max": 20,
        "step": 2,
        "default": 0,
        "unit": "px",
        "label": "Media Padding"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px recommended"
      }
    ]
  },
  {
    "name": "Products",
    "settings": [
      {
        "type": "header",
        "content": "Product Cards"
      },
      {
        "type": "checkbox",
        "id": "product_cards_grayscale",
        "label": "Grayscale product images",
        "default": true,
        "info": "Images will reveal color on hover"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_sku",
        "label": "Show SKU",
        "default": true
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart Type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Enable cart note",
        "default": true
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "label": "Enable predictive search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_products",
        "label": "Show products in search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_collections",
        "label": "Show collections in search",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      },
      {
        "type": "text",
        "id": "social_linkedin_link",
        "label": "LinkedIn"
      }
    ]
  }
]
