{%- comment -%}
  Builder Grid - Machinist Industrial Theme
  12-column composable page builder (replaces PageFly/Shogun/GemPages)

  Features:
  - 12-column grid system with flexible column spans
  - 10 block types: heading, paragraph, image, button, video, spacer, divider, html, liquid, icon_text
  - Responsive breakpoints with mobile column stacking
  - Industrial aesthetic with safety orange accents
{%- endcomment -%}

<section class="builder-section builder-section--{{ section.settings.background_style }}" data-section-id="{{ section.id }}">
  <div class="{% if section.settings.full_width %}builder-container--full{% else %}container{% endif %}">
    {%- if section.settings.section_heading != blank -%}
      <h2 class="builder-section__heading">{{ section.settings.section_heading }}</h2>
    {%- endif -%}

    <div class="builder-grid" style="--row-gap: {{ section.settings.row_gap }}px; --col-gap: {{ section.settings.column_gap }}px;">
      {%- for block in section.blocks -%}
        {%- liquid
          case block.settings.width
            when '25'
              assign span = 3
            when '33'
              assign span = 4
            when '50'
              assign span = 6
            when '66'
              assign span = 8
            when '75'
              assign span = 9
            when '100'
              assign span = 12
            else
              assign span = 12
          endcase

          assign mobile_span = block.settings.mobile_width | default: 12
        -%}

        <div
          class="builder-block builder-block--{{ block.type }}"
          style="--span: {{ span }}; --mobile-span: {{ mobile_span }}; text-align: {{ block.settings.align }};"
          {{ block.shopify_attributes }}
        >
          {%- case block.type -%}
            {%- when 'heading' -%}
              <{{ block.settings.tag }} class="builder-heading builder-heading--{{ block.settings.size }}">
                {{ block.settings.text }}
              </{{ block.settings.tag }}>

            {%- when 'paragraph' -%}
              <div class="builder-paragraph" style="max-width: {{ block.settings.max_width }}px;">
                {{ block.settings.text }}
              </div>

            {%- when 'image' -%}
              <div class="builder-image-wrapper" style="max-width: {{ block.settings.max_width }}px; margin-left: {% if block.settings.align == 'center' %}auto{% elsif block.settings.align == 'right' %}auto{% else %}0{% endif %}; margin-right: {% if block.settings.align == 'center' %}auto{% elsif block.settings.align == 'left' %}auto{% else %}0{% endif %};">
                {%- if block.settings.image -%}
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="builder-image-link">
                  {%- endif -%}

                  <img
                    src="{{ block.settings.image | image_url: width: 1200 }}"
                    srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                            {{ block.settings.image | image_url: width: 800 }} 800w,
                            {{ block.settings.image | image_url: width: 1200 }} 1200w"
                    sizes="(min-width: 1200px) 1200px, 100vw"
                    alt="{{ block.settings.image.alt | default: block.settings.text }}"
                    class="builder-image {% if block.settings.apply_grayscale %}builder-image--grayscale{% endif %}"
                    loading="lazy"
                  >

                  {%- if block.settings.link != blank -%}
                    </a>
                  {%- endif -%}
                {%- else -%}
                  <div class="builder-image-placeholder">IMAGE</div>
                {%- endif -%}

                {%- if block.settings.caption != blank -%}
                  <p class="builder-image-caption">{{ block.settings.caption }}</p>
                {%- endif -%}
              </div>

            {%- when 'button' -%}
              <div class="builder-button-wrapper">
                <a
                  href="{{ block.settings.link }}"
                  class="btn builder-button builder-button--{{ block.settings.style }}"
                  {% if block.settings.open_new_tab %}target="_blank" rel="noopener"{% endif %}
                >
                  {{ block.settings.label }}
                </a>
              </div>

            {%- when 'video' -%}
              <div class="builder-video-wrapper" style="max-width: {{ block.settings.max_width }}px; margin-left: {% if block.settings.align == 'center' %}auto{% elsif block.settings.align == 'right' %}auto{% else %}0{% endif %}; margin-right: {% if block.settings.align == 'center' %}auto{% elsif block.settings.align == 'left' %}auto{% else %}0{% endif %};">
                {%- if block.settings.video_url contains 'youtube.com' or block.settings.video_url contains 'youtu.be' -%}
                  {%- liquid
                    assign video_id = block.settings.video_url | split: 'v=' | last | split: '&' | first
                    if video_id == block.settings.video_url
                      assign video_id = block.settings.video_url | split: '/' | last
                    endif
                  -%}
                  <div class="builder-video" style="padding-bottom: 56.25%; position: relative;">
                    <iframe
                      src="https://www.youtube.com/embed/{{ video_id }}"
                      frameborder="0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
                    ></iframe>
                  </div>
                {%- elsif block.settings.video_url contains 'vimeo.com' -%}
                  {%- assign video_id = block.settings.video_url | split: '/' | last -%}
                  <div class="builder-video" style="padding-bottom: 56.25%; position: relative;">
                    <iframe
                      src="https://player.vimeo.com/video/{{ video_id }}"
                      frameborder="0"
                      allow="autoplay; fullscreen; picture-in-picture"
                      allowfullscreen
                      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
                    ></iframe>
                  </div>
                {%- else -%}
                  <div class="builder-video-placeholder">VIDEO</div>
                {%- endif -%}
              </div>

            {%- when 'spacer' -%}
              <div class="builder-spacer" style="height: {{ block.settings.height }}px;"></div>

            {%- when 'divider' -%}
              <div class="builder-divider-wrapper">
                <hr class="builder-divider builder-divider--{{ block.settings.style }}" style="border-width: {{ block.settings.thickness }}px; max-width: {{ block.settings.width }}%;">
              </div>

            {%- when 'html' -%}
              <div class="builder-html">
                {{ block.settings.html }}
              </div>

            {%- when 'liquid' -%}
              <div class="builder-liquid">
                {{ block.settings.liquid }}
              </div>

            {%- when 'icon_text' -%}
              <div class="builder-icon-text">
                {%- if block.settings.icon != blank -%}
                  <div class="builder-icon-text__icon">
                    {%- case block.settings.icon -%}
                      {%- when 'shield' -%}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                        </svg>
                      {%- when 'star' -%}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                        </svg>
                      {%- when 'check' -%}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <polyline points="20 6 9 17 4 12"/>
                        </svg>
                      {%- when 'truck' -%}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <rect x="1" y="3" width="15" height="13"/>
                          <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                          <circle cx="5.5" cy="18.5" r="2.5"/>
                          <circle cx="18.5" cy="18.5" r="2.5"/>
                        </svg>
                      {%- when 'cog' -%}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <circle cx="12" cy="12" r="3"/>
                          <path d="M12 1v6m0 6v6"/>
                        </svg>
                      {%- when 'tool' -%}
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
                        </svg>
                    {%- endcase -%}
                  </div>
                {%- endif -%}

                <div class="builder-icon-text__content">
                  {%- if block.settings.title != blank -%}
                    <h3 class="builder-icon-text__title">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <p class="builder-icon-text__text">{{ block.settings.text }}</p>
                  {%- endif -%}
                </div>
              </div>

          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .builder-section {
    padding: 60px 0;
    background: var(--c-bg);
  }

  .builder-section--light {
    background: var(--c-panel);
  }

  .builder-section--dark {
    background: #000000;
  }

  .builder-section--gradient {
    background: linear-gradient(135deg, var(--c-bg) 0%, var(--c-panel) 100%);
  }

  .builder-container--full {
    max-width: 100%;
    padding: 0;
  }

  .builder-section__heading {
    font-family: 'Teko', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--c-text-main);
  }

  .builder-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: var(--row-gap, 24px) var(--col-gap, 24px);
  }

  .builder-block {
    grid-column: span var(--span, 12);
  }

  @media (max-width: 768px) {
    .builder-block {
      grid-column: span var(--mobile-span, 12);
    }
  }

  /* Heading Styles */
  .builder-heading {
    font-family: 'Teko', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--c-text-main);
    margin: 0;
  }

  .builder-heading--small {
    font-size: 1.5rem;
  }

  .builder-heading--medium {
    font-size: 2.5rem;
  }

  .builder-heading--large {
    font-size: 3.5rem;
  }

  .builder-heading--xlarge {
    font-size: 4.5rem;
  }

  /* Paragraph Styles */
  .builder-paragraph {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--c-text-dim);
    margin: 0 auto;
  }

  /* Image Styles */
  .builder-image-wrapper {
    width: 100%;
  }

  .builder-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .builder-image--grayscale {
    filter: grayscale(1);
    transition: filter 0.3s ease;
  }

  .builder-image--grayscale:hover {
    filter: none;
  }

  .builder-image-placeholder {
    width: 100%;
    height: 300px;
    background: var(--c-border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Source Code Pro', monospace;
    font-weight: 700;
    color: var(--c-text-dim);
  }

  .builder-image-caption {
    font-family: 'Source Code Pro', monospace;
    font-size: 0.85rem;
    color: var(--c-text-dim);
    margin-top: 8px;
    text-align: center;
  }

  .builder-image-link {
    display: block;
  }

  /* Button Styles */
  .builder-button-wrapper {
    display: flex;
  }

  .builder-button {
    display: inline-block;
    padding: 12px 32px;
    font-family: 'Source Code Pro', monospace;
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    transition: all 0.15s;
    border: 2px solid;
  }

  .builder-button--primary {
    background: var(--c-accent);
    color: var(--c-bg);
    border-color: var(--c-accent);
  }

  .builder-button--primary:hover {
    background: transparent;
    color: var(--c-accent);
  }

  .builder-button--secondary {
    background: transparent;
    color: var(--c-accent);
    border-color: var(--c-accent);
  }

  .builder-button--secondary:hover {
    background: var(--c-accent);
    color: var(--c-bg);
  }

  .builder-button--outline {
    background: transparent;
    color: var(--c-text-main);
    border-color: var(--c-text-main);
  }

  .builder-button--outline:hover {
    background: var(--c-text-main);
    color: var(--c-bg);
  }

  /* Video Styles */
  .builder-video-wrapper {
    width: 100%;
  }

  .builder-video-placeholder {
    width: 100%;
    height: 400px;
    background: var(--c-border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Source Code Pro', monospace;
    font-weight: 700;
    color: var(--c-text-dim);
  }

  /* Spacer */
  .builder-spacer {
    width: 100%;
  }

  /* Divider */
  .builder-divider-wrapper {
    display: flex;
    justify-content: center;
  }

  .builder-divider {
    border: none;
    border-top-style: solid;
    border-top-color: var(--c-border);
    margin: 0;
  }

  .builder-divider--solid {
    border-top-style: solid;
  }

  .builder-divider--dashed {
    border-top-style: dashed;
  }

  .builder-divider--dotted {
    border-top-style: dotted;
  }

  .builder-divider--accent {
    border-top-color: var(--c-accent);
  }

  /* HTML & Liquid */
  .builder-html,
  .builder-liquid {
    color: var(--c-text-main);
  }

  /* Icon Text */
  .builder-icon-text {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .builder-icon-text__icon {
    flex-shrink: 0;
    color: var(--c-accent);
  }

  .builder-icon-text__icon svg {
    display: block;
  }

  .builder-icon-text__content {
    flex: 1;
  }

  .builder-icon-text__title {
    font-family: 'Teko', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
    color: var(--c-text-main);
  }

  .builder-icon-text__text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--c-text-dim);
    margin: 0;
  }
</style>

