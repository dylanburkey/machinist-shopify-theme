{%- comment -%}
  FAQ Section - Machinist Industrial Theme
  Advanced FAQ with faceted search and multiple display modes

  Features:
  - Display modes: accordion, sidebar-left, sidebar-right
  - Real-time search filtering
  - Category filtering
  - Expandable/collapsible answers
  - Industrial aesthetic
{%- endcomment -%}

<section class="faq-section faq-section--{{ section.settings.layout }}" data-section-id="{{ section.id }}">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <h2 class="faq-section__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="faq-container">
      {%- if section.settings.enable_search or section.settings.enable_categories -%}
        <div class="faq-sidebar">
          {%- if section.settings.enable_search -%}
            <div class="faq-search">
              <input
                type="text"
                class="faq-search__input"
                placeholder="{{ section.settings.search_placeholder | default: 'Search FAQs...' }}"
                data-faq-search
              >
            </div>
          {%- endif -%}

          {%- if section.settings.enable_categories -%}
            <div class="faq-categories">
              <h3 class="faq-categories__title">Categories</h3>
              <button class="faq-category-btn faq-category-btn--active" data-category="all">
                All Questions
              </button>
              {%- assign categories = section.blocks | map: 'settings' | map: 'category' | uniq -%}
              {%- for category in categories -%}
                {%- if category != blank -%}
                  <button class="faq-category-btn" data-category="{{ category | handleize }}">
                    {{ category }}
                  </button>
                {%- endif -%}
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class="faq-content">
        <div class="faq-items" data-faq-items>
          {%- for block in section.blocks -%}
            {%- if block.type == 'faq_item' -%}
              <div
                class="faq-item"
                data-category="{{ block.settings.category | handleize | default: 'uncategorized' }}"
                data-question="{{ block.settings.question | downcase }}"
                {{ block.shopify_attributes }}
              >
                <button class="faq-question" type="button" aria-expanded="false">
                  <span class="faq-question__text">{{ block.settings.question }}</span>
                  <svg class="faq-question__icon" width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="10" y1="5" x2="10" y2="15"/>
                    <line class="faq-question__horizontal" x1="5" y1="10" x2="15" y2="10"/>
                  </svg>
                </button>
                <div class="faq-answer" hidden>
                  <div class="faq-answer__content">
                    {{ block.settings.answer }}
                  </div>
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <div class="faq-no-results" hidden>
          <p>No FAQs found matching your search.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  class FAQSection {
    constructor(element) {
      this.element = element;
      this.faqItems = element.querySelectorAll('.faq-item');
      this.searchInput = element.querySelector('[data-faq-search]');
      this.categoryButtons = element.querySelectorAll('[data-category]');
      this.noResults = element.querySelector('.faq-no-results');

      this.currentCategory = 'all';
      this.searchTerm = '';

      this.init();
    }

    init() {
      // FAQ toggle
      this.faqItems.forEach(item => {
        const question = item.querySelector('.faq-question');
        const answer = item.querySelector('.faq-answer');

        question.addEventListener('click', () => {
          const isOpen = question.getAttribute('aria-expanded') === 'true';

          question.setAttribute('aria-expanded', !isOpen);
          answer.hidden = isOpen;
          item.classList.toggle('is-open', !isOpen);
        });
      });

      // Search
      if (this.searchInput) {
        this.searchInput.addEventListener('input', (e) => {
          this.searchTerm = e.target.value.toLowerCase();
          this.filterFAQs();
        });
      }

      // Category filter
      this.categoryButtons.forEach(button => {
        button.addEventListener('click', () => {
          this.categoryButtons.forEach(btn => btn.classList.remove('faq-category-btn--active'));
          button.classList.add('faq-category-btn--active');
          this.currentCategory = button.dataset.category;
          this.filterFAQs();
        });
      });
    }

    filterFAQs() {
      let visibleCount = 0;

      this.faqItems.forEach(item => {
        const category = item.dataset.category;
        const question = item.dataset.question || '';
        const answerContent = item.querySelector('.faq-answer__content').textContent.toLowerCase();

        const matchesCategory = this.currentCategory === 'all' || category === this.currentCategory;
        const matchesSearch = !this.searchTerm ||
          question.includes(this.searchTerm) ||
          answerContent.includes(this.searchTerm);

        const isVisible = matchesCategory && matchesSearch;
        item.hidden = !isVisible;

        if (isVisible) visibleCount++;
      });

      // Show/hide no results message
      if (this.noResults) {
        this.noResults.hidden = visibleCount > 0;
      }
    }
  }

  // Initialize FAQ sections
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.faq-section').forEach(section => {
      new FAQSection(section);
    });
  });
</script>

<style>
  .faq-section {
    padding: 60px 0;
    background: var(--c-bg);
  }

  .faq-section__heading {
    font-family: 'Teko', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--c-text-main);
  }

  .faq-container {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  .faq-section--sidebar-left .faq-container {
    grid-template-columns: 280px 1fr;
  }

  .faq-section--sidebar-right .faq-container {
    grid-template-columns: 1fr 280px;
  }

  .faq-section--sidebar-right .faq-sidebar {
    order: 2;
  }

  @media (max-width: 900px) {
    .faq-section--sidebar-left .faq-container,
    .faq-section--sidebar-right .faq-container {
      grid-template-columns: 1fr;
    }

    .faq-section--sidebar-right .faq-sidebar {
      order: 0;
    }
  }

  /* Sidebar */
  .faq-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Search */
  .faq-search__input {
    width: 100%;
    padding: 12px 16px;
    background: var(--c-panel);
    border: 1px solid var(--c-border);
    color: var(--c-text-main);
    font-family: 'Source Code Pro', monospace;
    font-size: 0.9rem;
    transition: border-color 0.15s;
  }

  .faq-search__input:focus {
    outline: none;
    border-color: var(--c-accent);
  }

  .faq-search__input::placeholder {
    color: var(--c-text-dim);
  }

  /* Categories */
  .faq-categories__title {
    font-family: 'Teko', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
    color: var(--c-text-main);
  }

  .faq-category-btn {
    display: block;
    width: 100%;
    padding: 10px 16px;
    background: var(--c-panel);
    border: 1px solid var(--c-border);
    color: var(--c-text-main);
    font-family: 'Source Code Pro', monospace;
    font-size: 0.85rem;
    text-align: left;
    cursor: pointer;
    transition: all 0.15s;
    margin-bottom: 8px;
  }

  .faq-category-btn:hover {
    border-color: var(--c-accent);
  }

  .faq-category-btn--active {
    background: var(--c-accent);
    border-color: var(--c-accent);
    color: var(--c-bg);
    font-weight: 700;
  }

  /* FAQ Items */
  .faq-items {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .faq-item {
    background: var(--c-panel);
    border: 1px solid var(--c-border);
  }

  .faq-item.is-open {
    border-color: var(--c-accent);
  }

  .faq-question {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: transparent;
    border: none;
    color: var(--c-text-main);
    font-family: 'Teko', sans-serif;
    font-size: 1.25rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-align: left;
    cursor: pointer;
    transition: color 0.15s;
  }

  .faq-question:hover {
    color: var(--c-accent);
  }

  .faq-question__text {
    flex: 1;
  }

  .faq-question__icon {
    flex-shrink: 0;
    color: var(--c-accent);
    transition: transform 0.15s;
  }

  .faq-item.is-open .faq-question__icon {
    transform: rotate(45deg);
  }

  .faq-question__horizontal {
    transition: opacity 0.15s;
  }

  .faq-item.is-open .faq-question__horizontal {
    opacity: 0;
  }

  .faq-answer {
    overflow: hidden;
  }

  .faq-answer__content {
    padding: 0 1.5rem 1.5rem 1.5rem;
    color: var(--c-text-dim);
    line-height: 1.8;
  }

  .faq-answer__content p {
    margin-bottom: 1rem;
  }

  .faq-answer__content p:last-child {
    margin-bottom: 0;
  }

  .faq-answer__content ul,
  .faq-answer__content ol {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .faq-answer__content li {
    margin-bottom: 0.5rem;
  }

  /* No Results */
  .faq-no-results {
    padding: 3rem 1.5rem;
    text-align: center;
    background: var(--c-panel);
    border: 1px solid var(--c-border);
    color: var(--c-text-dim);
  }

  .faq-no-results p {
    font-family: 'Source Code Pro', monospace;
    font-size: 0.9rem;
    margin: 0;
  }
</style>

