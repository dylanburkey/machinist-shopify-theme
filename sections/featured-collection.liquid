{% comment %}
  MACHINIST THEME: Featured Collection Section
{% endcomment %}

<section class="featured-collection" data-section-id="{{ section.id }}">
  <div class="featured-collection__header">
    <h2 class="featured-collection__title txt-heading">
      {{ section.settings.heading }}
    </h2>
    {%- if section.settings.collection != blank and section.settings.show_view_all -%}
      <a href="{{ section.settings.collection.url }}" class="featured-collection__link txt-mono">
        VIEW_ALL [ {{ section.settings.collection.products_count }} ]
      </a>
    {%- endif -%}
  </div>

  <div class="featured-collection__grid product-grid">
    {%- if section.settings.collection != blank -%}
      {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
        {% render 'product-card', product: product %}
      {%- endfor -%}
    {%- else -%}
      {%- for i in (1..section.settings.products_to_show) -%}
        {% render 'product-card-placeholder' %}
      {%- endfor -%}
    {%- endif -%}
  </div>
</section>

<style>
  .featured-collection {
    border-bottom: 2px solid var(--c-border);
  }

  .featured-collection__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--pad);
    border-bottom: 2px solid var(--c-border);
  }

  .featured-collection__title {
    font-size: 3rem;
  }

  .featured-collection__link {
    font-size: 1.4rem;
    color: var(--c-accent);
  }

  .featured-collection__link:hover {
    text-decoration: underline;
  }

  .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(32rem, 1fr));
    gap: var(--grid-gap);
    background-color: var(--c-border);
  }

  @media (max-width: 600px) {
    .featured-collection__grid {
      grid-template-columns: 1fr;
    }

    .featured-collection__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Featured collection",
  "class": "section-featured-collection",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FEATURED_PRODUCTS"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' link",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
