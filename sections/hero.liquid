{% comment %}
  MACHINIST THEME: Hero Section
{% endcomment %}

<section class="hero" data-section-id="{{ section.id }}">
  <div class="hero__content">
    <div class="hero__status txt-mono txt-accent">
      {{ section.settings.status_text }}
    </div>
    <h1 class="hero__title txt-heading">
      {{ section.settings.heading }}
    </h1>
    <p class="hero__subtitle txt-body">
      {{ section.settings.subheading }}
    </p>
    {%- if section.settings.button_label != blank -%}
      <div class="hero__cta">
        <a href="{{ section.settings.button_link }}" class="btn">
          <span class="btn__text">{{ section.settings.button_label }}</span>
        </a>
      </div>
    {%- endif -%}
  </div>
  <div class="hero__visual">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | default: section.settings.heading }}"
        width="1920"
        height="1080"
        loading="eager"
        class="hero__image"
      >
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'hero__placeholder' }}
    {%- endif -%}
    <div class="hero__label txt-mono">
      {{ section.settings.image_label }}
    </div>
  </div>
</section>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    min-height: 85vh;
    border-bottom: 2px solid var(--c-border);
  }

  .hero__content {
    padding: calc(var(--pad) * 3);
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-right: 2px solid var(--c-border);
    background: var(--c-bg);
  }

  .hero__status {
    margin-bottom: 1rem;
  }

  .hero__title {
    font-size: 7rem;
    margin-bottom: 1.5rem;
    line-height: 0.95;
  }

  .hero__subtitle {
    margin-bottom: 2rem;
    max-width: 45rem;
    font-size: 1.6rem;
  }

  .hero__cta {
    margin-top: 3rem;
  }

  .hero__visual {
    position: relative;
    overflow: hidden;
  }

  .hero__image,
  .hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%) contrast(120%) brightness(60%);
  }

  .hero__visual::before {
    content: '';
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
      45deg,
      rgba(0, 0, 0, 0.5) 0,
      rgba(0, 0, 0, 0.5) 1px,
      transparent 0,
      transparent 4px
    );
    z-index: 1;
    pointer-events: none;
  }

  .hero__label {
    position: absolute;
    bottom: var(--pad);
    right: var(--pad);
    color: var(--c-accent);
    z-index: 2;
    background: var(--c-bg);
    padding: 0.2rem 0.5rem;
    font-size: 1.2rem;
  }

  @media (max-width: 1024px) {
    .hero {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .hero__content {
      border-right: none;
      padding: calc(var(--pad) * 2);
    }

    .hero__visual {
      height: 35rem;
      border-top: 2px solid var(--c-border);
    }

    .hero__title {
      font-size: 5rem;
    }
  }

  @media (max-width: 600px) {
    .hero__title {
      font-size: 4rem;
    }

    .hero__content {
      padding: var(--pad);
    }

    .hero__label {
      display: none;
    }
  }
</style>

{% schema %}
{
  "name": "Hero",
  "class": "section-hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "status_text",
      "label": "Status text",
      "default": "// SYSTEM_STATUS: ONLINE"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "PRECISION<br>AUTOMATION<br>INFRASTRUCTURE"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Engineered for zero-tolerance environments. We supply high-grade CNC components and industrial robotics for the modern manufacturer."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "INITIATE_CATALOGUE()"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "image_label",
      "label": "Image technical label",
      "default": "FIG. 01 // AUTONOMOUS_ASSEMBLY"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
