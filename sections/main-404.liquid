{% comment %}
  MACHINIST THEME: 404 Page Section
{% endcomment %}

<section class="error-404" data-section-id="{{ section.id }}">
  <div class="error-404__content">
    <div class="error-404__code txt-mono txt-accent">// ERROR_CODE: 404</div>
    <h1 class="error-404__title txt-heading">{{ 'templates.404.title' | t }}</h1>
    <p class="error-404__message txt-body">{{ 'templates.404.subtext' | t }}</p>
    <a href="{{ routes.root_url }}" class="btn">
      <span class="btn__text">RETURN_TO_HOME()</span>
    </a>
  </div>
</section>

<style>
  .error-404 {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--pad);
  }

  .error-404__content {
    max-width: 50rem;
  }

  .error-404__code {
    font-size: 1.4rem;
    margin-bottom: 1rem;
  }

  .error-404__title {
    font-size: 6rem;
    margin-bottom: 1rem;
  }

  .error-404__message {
    font-size: 1.6rem;
    margin-bottom: 3rem;
  }

  @media (max-width: 600px) {
    .error-404__title {
      font-size: 4rem;
    }
  }
</style>

{% schema %}
{
  "name": "404 page",
  "tag": "section",
  "class": "section-404"
}
{% endschema %}
