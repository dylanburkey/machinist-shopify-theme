    top: 8px;
    right: 8px;
    display: flex;
    padding: 6px;
    background: rgba(10,10,10,0.8);
    border: 1px solid var(--c-border);
    border-radius: 0;
    color: var(--c-text-dim);
    opacity: 0.8;
    cursor: pointer;
    transition: opacity 0.2s, background 0.2s, border-color 0.2s;
    z-index: 5;
  }

  .hotspot__close:hover {
    opacity: 1;
    background: var(--c-bg);
    border-color: var(--c-accent);
    color: var(--c-accent);
  }

